     {{#each article}}
       <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">{{this.title}}</span>
            </div>
            <div class="card-action">
              <a href="{{this.link}}">learn more!</a>
              <button type="submit" class="noteBtn btn" id="noteBtn-{{this._id}}" value={{this._id}}>
                view notes
              </button>
              <!--modal trigger-->
              <button type="submit" class="addNoteBtn hidden btn modal-trigger" id="addNoteBtn-{{this._id}}" value={{this._id}} data-target="modal{{this._id}}">
                add a note
              </button>
              <!-- Modal Structure -->
              <div id="modal{{this._id}}" class="modal modal-fixed-footer">
                <div class="modal-content">
                  <h4>Modal Header</h4>
                  <p>A bunch of text</p>
                </div>
                <div class="modal-footer">
                  <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
                </div>
              </div>
            </div>
            <div class="note-container hidden" id="note{{this._id}}">
              <div class="notes">
                <button class="closeBtn" value={{this._id}}><h3>X</h3></button>
                {{#each note}}
                    <h3>{{this.title}}</h3>
                    <p>{{this.body}}</p>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}